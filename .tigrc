# デフォルトの bind generic G !git gc を無効化する
bind generic G none
# vim風の移動
bind generic g move-first-line
bind generic G move-last-line
# revertを定義
bind main v !?git revert %(commit)
bind diff v !?git revert %(commit)
bind main V !?git revert %(prompt) %(commit)
bind diff V !?git revert %(prompt) %(commit)

# main-viewの左端にコミットIDを表示する
set main-view = id date author commit-title:graph=yes,refs=yes

# ステータスビューで V 押下すると、差分表示モードでコミットログ入力画面を開く
bind status V !git commit -v

