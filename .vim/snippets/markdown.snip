snippet ``
	\`\`\`
	${1:code}
	\`\`\`

# Language.
snippet ``l
	\`\`\`${1:language}
	${2:code}
	\`\`\`

# Image
snippet     image
abbr        markdown image
	![](${0})

snippet     details
abbr        <details><summary></summary></details>
options     head
	<details>
	<summary>${1:summary}</summary>

	${2:details}
	</details>

# see: ./nothing.snip
snippet     %
abbr        chatgpt command {}
	%!{ ${1:} }

snippet     gh-issue
abbr        %!{ gh-issue }
options     head
	%!{ gh-issue ${1:url} }

snippet     gh-pr
abbr        %!{ gh-pr }
options     head
  %!{ gh-pr ${1:url} }

snippet     cat-repo
abbr        %!{ cat-repo }
options     head
  %!{ cat-repo ${1:path} }

snippet    curl
abbr       %!{ md-fetch }
options    head
  %!{ md-fetch ${1:url} }
